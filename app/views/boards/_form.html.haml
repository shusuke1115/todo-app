= render 'layouts/errors_messages', model: @board
= form_for @board do |f|
  .board_title 
    = f.label :title,"タイトル (4~40文字)", class: 'control_label'
    = f.text_field :title, class: 'text'
  .board_content
    = f.label :content,"内容 (10文字以上)", class: 'control_label'
    = f.text_area :content, class: 'content'
  .actions
    = f.submit "Submit", class: 'submit'