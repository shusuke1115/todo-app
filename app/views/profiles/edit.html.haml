.container 
  %h1 Edit Profile
  = form_with(model: @profile, url: user_profile_path,method:'put', local: true) do |f|
    .profile_nickname
      = f.label :nickname, class: 'control_label'
      = f.text_field :nickname, class: 'text'
    .profile_image
      = f.label :user_character_image, class: 'control_label'
      = f.file_field :user_image, class: 'text'
    .profile_age
      = f.label :age, class: 'control_label'
      = f.number_field :age, class: 'text'
    .profile_birthday 
      = f.label :date_of_birth, class: 'control_label'
      = f.date_field :birthday, class: 'text'
    .profile_gender
      = f.label :gender, class: 'control_label'
      = f.select :gender, Profile.genders.keys,{},{class:'text' }
    .actions
      = f.submit "Submit", class: 'submit'